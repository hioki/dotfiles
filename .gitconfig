[user]
	email = hioki.daichi@gmail.com
	name = Daichi Hioki
[core]
	excludesfile = ~/.gitignore_global
	whitespace = cr-at-eol
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	dark = true      # or light = true, or omit for auto-detection
	line-numbers = true
[merge]
	conflictStyle = zdiff3
	tool = fugitive
[diff]
	tool = vimdiff
[mergetool]
	prompt = false
[init]
  templatedir = ~/.git_template
	defaultBranch = main
[rebase]
	autosquash = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[ghq]
	root = ~/.rhq
[pull]
	rebase = false
[log]
	follow = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[push]
	default = current
[alias]
	ai-commit = !claude code "Generate a commit message for the staged changes. Use conventional commits format (feat:, fix:, docs:, etc.). Keep it under 50 characters for the subject line." --include-git-diff
